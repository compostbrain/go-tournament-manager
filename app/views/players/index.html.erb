<div class="container">

  <div>
    <!-- Dropdown Trigger -->
    <a class='dropdown-button btn' href='#' data-activates='dropdown1'>Select Round</a>

<!-- Dropdown Structure -->
    <ul id='dropdown1' class='dropdown-content'>
      <% @rounds.each do |round| %>
      <li>
          <%= link_to "Round #{round.number + 1}", round_players_url(round) %>
      </li>

      <% end %>
    </ul>
  </div>
  <div class="row">
    <div class="col s3">
      <table class="c bordered">
        <h1>Players</h1>
        <thead>
          <tr>
            <th>Name</th>
            <th>Rank</th>
            <th>Club</th>
          </tr>
        </thead>
        <tbody id="active-players">
          <%= render @players %>
        </tbody>

      </table>
    </div>
    <div class="col s3">

      <button class="btn waves-effect waves-light" type="submit" name="action"><%= button_to "Pair Games", pair_round_players_path %>
    <i class="material-icons right"></i>
  </button>
    </div>
    <div class="col 6">
      <table class="bordered">
        <h1>Games</h1>
        <thead>
          <tr>
            <th>Table</th>
            <th>White</th>
            <th>Black</th>
            <th>Handicap</th>
          </tr>
        </thead>
        <tbody id="active-players">
          <% @games.each do |game| %>
            <%= render partial: "games/game", locals: { game: game } %>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>
