<div class="container">
  <div class="row">
    <div class="card-panel amber lighten-3 z-depth-4">
      <h1 class="center-align"><%= @tournament.name %> Tournament</h1>
      <h6 class="right-align">Location: <%= @tournament.location %></h6>
      <h6 class="right-align">Start Date: <%= @tournament.begin_date %></h6>
    </div>

  </div>
  <div class="row">
    <div class="col s4">
        <%= link_to "Player Registration", tournament_players_path(@tournament), class: "btn waves-effect waves-light col s12" %>
    </div>
    <div class="col s4">
      <a class='dropdown-button btn col s12' href='#' data-activates='dropdown1'>Go to Round</a>
      <ul id='dropdown1' class='dropdown-content'>
        <% @rounds.each do |round| %>
        <li>
            <%= link_to "Round #{round.number + 1}", round_players_url(round), class: "col s12" %>
        </li>

        <% end %>
      </ul>
    </div>
    <div class="col s4">
      <%= link_to "Standings", "#", class: "btn waves-effect waves-light col s12" %>

    </div>
  </div>

</div>
